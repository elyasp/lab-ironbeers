<div class="allbeers">
{{#each beers}}
  <div class="card" style="width: 20rem;">
    <img src={{this.image_url}} class="card-img-top">
  <div class="card-body">
    <h5 class="card-title">{{this.name}}</h5>
    <h6 class="text-muted">{{this.tagline}}</h6>
    <p class="card-text">{{this.description}}</p>
  </div>
</div>
{{/each}}

</div>

