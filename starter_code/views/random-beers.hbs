
{{#each random-beers}}
<div class="card mb-3 container-fluid" style="max-width: 540px;">
  <div class="row no-gutters">
    <div class="col-md-4">
      <img src={{this.image_url}} class="card-img">
    </div>
    <div class="col-md-8">
      <div class="card-body">
        <h5 class="card-title">{{this.name}}</h5>
        <h6 class="text-muted">{{this.tagline}}</h6>
         <p class="card-text">{{this.description}}</p>
         
         <ul><strong>Food stuff</strong>
         {{#each this.food_pairing}}
             <li>{{this}}</li>
        {{/each}}
             </ul> 
          <p class="card-text"><strong>Brewers Tips: </strong>{{this.brewers_tips}}</p>
      </div>
    </div>
  </div>
</div>
{{/each}}